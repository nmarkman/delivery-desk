  "item": [
    {
      "name": "üîê Step 1: Get JWT Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Extract JWT token from response and store it in collection variable",
              "if (pm.response.code === 200) {",
              "    const responseJson = pm.response.json();",
              "    if (responseJson.token) {",
              "        pm.collectionVariables.set('jwt_token', responseJson.token);",
              "        console.log('JWT token stored:', responseJson.token);",
              "    } else {",
              "        console.log('No token found in response');",
              "    }",
              "} else {",
              "    console.log('Failed to get token. Status:', pm.response.code);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Act-Database-Name",
            "value": "{{database_name}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/authorize",
          "host": ["{{base_url}}"],
          "path": ["authorize"]
        },
        "description": "First step: Get JWT token using Basic authentication. This token will be used for subsequent API calls."
      }
    },
    {
      "name": "üìã System Info",
