    },
    {
      "key": "database_name",
      "value": "D62921203126",
      "type": "string"
    },
    {
      "key": "username",
      "value": "markmanra@gmail.com",
      "type": "string"
    },
    {
      "key": "password",
      "value": "bze-VXR_bdp9jkn8zpn",
